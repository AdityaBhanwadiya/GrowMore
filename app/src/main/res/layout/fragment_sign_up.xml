<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpFragment"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--------------------OR--------------------"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_alreadyhaveanaccount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sigin_button"
            app:layout_constraintVertical_bias="0.264" />

        <TextView
            android:id="@+id/tv_alreadyhaveanaccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:padding="10dp"
            android:text="Already have an account."
            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sigin_button"
            app:layout_constraintVertical_bias="0.75" />

        <android.widget.Button
            android:id="@+id/sigin_button"
            android:layout_width="371dp"
            android:layout_height="58dp"
            android:layout_marginBottom="100dp"
            android:background="@color/btncolor"
            android:enabled="false"
            android:text="SIGN UP"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.325"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/reg_name"
            android:layout_width="371dp"
            android:layout_height="60dp"
            android:hint="Name"
            android:padding="20dp"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.076" />

        <EditText
            android:id="@+id/reg_city"
            android:layout_width="371dp"
            android:layout_height="60dp"
            android:hint="City/Village"
            android:padding="20dp"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.325"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reg_name"
            app:layout_constraintVertical_bias="0.028" />

        <EditText
            android:id="@+id/reg_email"
            android:layout_width="371dp"
            android:layout_height="60dp"
            android:hint="E-mail"
            android:padding="20dp"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.35"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reg_city"
            app:layout_constraintVertical_bias="0.032" />

        <EditText
            android:id="@+id/reg_pass"
            android:layout_width="371dp"
            android:layout_height="60dp"
            android:hint="Password (Min.8)"
            android:padding="20dp"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.325"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reg_email"
            app:layout_constraintVertical_bias="0.066" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="406dp"
            android:layout_height="202dp"
            android:src="@mipmap/logo2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.001" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="268dp"
            android:layout_height="34dp"
            android:text="Cultivating ideas for growth"
            android:textSize="18dp"
            android:textStyle="bold|italic"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintHorizontal_bias="0.63"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.916" />

        <ProgressBar
            android:id="@+id/signup_progressbar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#2B2B2B"
            android:backgroundTint="@color/white"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/sigin_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reg_pass" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
